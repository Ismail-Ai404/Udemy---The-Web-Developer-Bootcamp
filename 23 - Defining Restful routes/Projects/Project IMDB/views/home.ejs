<!-- @format -->

<%- include('partials/head') %>


<h1>Top Movies</h1>

     <div class="container">

<div class="row g-4 justify-content-center">

     <% topMovies.forEach(movie => { %>

     <div class="col-12 col-sm-6 col-md-4 col-lg-3">

          <div class="card movie-card text-center h-100">

               <img
                    src="<%= movie.img %>"
                    class="card-img-top"
                    alt="<%= movie.title %> poster"
               />

               <div class="card-body">
                    <h5 class="card-title">
                         <%= movie.title %>
                    </h5>
                    <p class="card-text rating">
                         ‚≠ê <%= movie.rating %>
                    </p>
               </div>
               <div><a href="movie/<%= movie.id %>/edit"><button>Edit</button></a></div>
               <div>
                    <form method="POST" action="/movie/<%= movie.id %>?_method=DELETE" >
                    <button>Delete</button>
               </form></div>
          </div>
     </div>
     <% }) %>
</div>
</div>

<a href="movie/new"><button>Add a new Movie</button></a>

          <!-- Bootstrap JS -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
     </body>
</html>
