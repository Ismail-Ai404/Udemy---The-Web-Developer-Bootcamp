<%- include('partials/head') %>

<div class="container my-5">
  <h1 class="text-light">Edit: <%= movie.title %></h1>
  <form
    action="/movie/<%= movie.id %>?_method=PATCH"
    method="POST"
    class="p-4 bg-dark text-light rounded shadow"
  >
    <div class="mb-3">
      <label class="form-label">Current Title</label>
      <input type="text" class="form-control" value="<%= movie.title %>" disabled />
    </div>

    <div class="mb-3">
      <label class="form-label">Update Rating</label>
      <input
        type="number"
        step="0.1"
        name="rating"
        class="form-control"
        value="<%= movie.rating %>"
        required
      />
    </div>

    <button type="submit" class="btn btn-warning">Save</button>
    <a href="/movie" class="btn btn-secondary ms-2">Cancel</a>
  </form>
</div>
</body>
</html>
